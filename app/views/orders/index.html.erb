<section class="body">
	<div class="container">
		<div class="row">
			<div class="col">
			<h2>受注管理</h2>
			<table class="table">
				<thead>
					<tr>
						<th>受注日</th>
						<th>ステータス</th>
						<th>ユーザー名</th>
						<th>注文金額</th>
						<th colspan="1"></th>
					</tr>
				</thead>
				<% @orders.each do |order| %>
				<tbody>
					<tr>
						<td><%= order.created_at.strftime('%Y/%m/%d') %></td>
						<td><%= status %></td>
						<td><%= link_to user.name, user_path(@user.id) %></td>
						<td><%= total_price %></td>
						<td><%= link_to "詳細", order_path(@order.id), class: "btn btn-primary" %></td>
					</tr>
				</tbody>
				<% end %>
			</table>
			<%= paginate @orders, class: "paginate" %>
			</div>
		</div>
	</div>
</section>

