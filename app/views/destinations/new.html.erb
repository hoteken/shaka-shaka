<div class = "container">
　　<div class = "row">
     <h1>送付先追加</h1>
   </div>
     <div class = "row">
       <div class="col-xs-1"></div>
       <ul class ="col-xs-10 center-block">
         <li class = "list"><p>送付先</p></li>
         <%= form_for @destination,url: user_destinations_path do |f| %>
         <li class = "list">新しい郵便番号<%= f.text_field :destination_postcode,class: "text-main1" %></li>
         <li class = "list">新しいお名前<%= f.text_field :destination_name,class: "text-main2" %></li>
         <li class = "list">新しい住所<%= f.text_area :destination_address,class: "text-main3" %></li>
       </ul>
         <div class="col-xs-1"></div>
     </div>
       <div class = "row">
         <div class="col-xs-6"></div>
         <div class="col-xs-4 "><%= link_to "戻る", user_destinations_path, class:"btn btn-default btn-sm text1-bottom"  %><%= f.submit '追加', class:"btn btn-default btn-sm" %></div>
         <div class="col-xs-2"></div>
         <% end %>
       </div>
</div>