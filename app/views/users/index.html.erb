<body class="cart_show_body">
<div class="haikei">
<div class="page-holder">
<h1>ユーザー管理</h1>
<% provide(:user_name, 'All users') %>
<%= search_form_for @search  do |f| %>
  <div class="kensaku">
    <%= f.text_field :user_name_cont, class: "form-control" %>
   </div>
  <div class="kensaku1">
  <%= f.submit "検索", class: "btn btn-primary" %>
  </div>
<% end %>
 
<table class="table">
<tr>
    <th>名前</th>
    <th>メールアドレス</th>
    <th colspan="3"></th>
</tr>
<% @result.each do |user| %>
<tr>
   <td><%= user.user_name %></td>
   <td><%= user.email %></td>
   <td><%= link_to "詳細", user_path(user)%></td>
 </tr>
<% end %>
</table>
<%= paginate @users %>
</div>
</div>
</body>