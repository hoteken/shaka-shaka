<h1>ユーザー編集</h1>
<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= @user.errors.count %>件のエラーがあります。</h2>
 
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= form_for(@user) do |f| %>
	<h4>ユーザー名</h4>
	<%= f.text_field :user_name %>
    <h4>かな</h4>
	<%= f.text_field :user_name_kana%>
    <h4>郵便番号</h4>
	<%= f.text_field :postcode %>
    <h4>住所</h4>
	<%= f.text_field :address %>
	<h4>電話番号</h4>
	<%= f.text_area :phone_number %>
    <%= link_to "戻る" , user_path(@user)%>
	<%= f.submit "更新" %>
<% end %>