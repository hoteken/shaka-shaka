<div class="container">
  <div class="col-xs-3">
    <h3>Categories</h3>
  </div>

  <div class="col-xs-7">
    <h3>item</h3>
    <div class="container">
      <div class="col-xs-2">
        <%= attachment_image_tag @product, :image, :fill, 180, 180, format: 'jpeg', class:"jacket-image", fallback:"img/no_image.png", :size => '180x180' %>
        <% if @product.stock > 3 %>
          在庫あり
        <% elsif %>
          残り<%= @product.stock %>点
        <% else %>
          在庫なし
        <% end %>
      </div>

      <div class="col-xs-8">
        <ul>
          <li>
          css list-style noneやで
            <%= @product.product_title %>
          </li>
          <li>
            <% @product.songs.each do |song| %>
              <%= song.artist.artist_name %>
            <% end %>
          </li>
          <li><%= @product.genre.genre_name %></li>
          <li><%= @product.product_price %></li>
          <li><%= @product.label.label_name %></li>
          <li><%= @product.explanation %></li>
        </ul>

        <p>収録曲</p>
        <% @disked_songs.each do |one_disk_songs| %>
          <p>ディスク<%= @disk_count %></p>
          <% one_disk_songs.each do |song| %>
            <p>
              <%= song.track_order %>.
              <%= song.song_title %>
            </p>
          <% end %>
          <% @disk_count += 1 %>
        <% end %>

        <div class="link-menu" %>
          <%= link_to "カートに追加", cart_cart_products_path(cart_id:1), class:"btn btn-primary", product_id: @product.id, quantity: 1, method: :post %>
          <%= link_to "戻る", products_path, class:"btn btn-primary" %>
          <%= link_to "編集", edit_product_path(@product), class:"btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>