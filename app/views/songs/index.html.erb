<div class = "container">
  <div class="row">
    <h3 class = "col-xs-2">楽曲管理</h3>
    <div class = "col-xs-10"></div>
  </div>
  <div class="row text">
    <% provide(:song_title , 'All songs') %>
    <%= search_form_for @search  do |f| %>
      <div class="form-group col-xs-2">
        <p class="bg-primary text-left">曲名検索</p>
        <%= f.text_field :song_title_cont, class: "form-control", placeholder:"曲名" %>
      </div>
      <div class="form-group col-xs-2">
        <p class="bg-primary text-left">アーティスト名検索</p>
        <%= f.text_field :artist_artist_name_cont, class: "form-control", placeholder:"アーティスト名" %>
      </div>
      <div class="form-group col-xs-2">
        <p class="bg-primary text-left">CDタイトル名検索</p>
        <%= f.text_field :product_product_title_cont, class: "form-control", placeholder:"CDタイトル" %>
      </div>
      <div class="form-group col-xs-1">
        <div class = "text2"></div>
        <%= f.submit "検索", :class=>"btn btn-primary button-top"%>
      </div>
    <% end %>
    <div class="form-group col-xs-1">
      <div class = "text2"></div>
      <%= link_to "結果クリア", songs_path,:class=>"btn btn-primary button-top"%>
    </div>
    <div class="form-group col-xs-1">
      <div class = "text2"></div>
      <%= link_to "新規登録", new_song_path, class:"btn btn-primary button-top" %>
    </div>
  </div>
  <div class="row">
    <div class = "col-xs-2"></div>
      <table class="col-xs-7 table">
        <thead>
          <tr>
            <th>曲名</th>
            <th>アーティスト名</th>
            <th>収録CD</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @result.each do |song| %>
            <tr>
              <td class ="text1"><%= song.song_title %></td>
              <td class ="text1"><%= song.artist.artist_name %></td>
              <td class ="text1"><%= song.product.product_title %></td>
              <td class ="text1"><%= link_to "編集", edit_song_path(song), class:"btn btn-primary" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="paginate"><%= paginate @songs %></div>
    </div>
  </div>
</div>