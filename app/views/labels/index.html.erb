<div class = "container">
  <div class="row">
    <div class="col-xs-2" style="padding-top: 22px"><p>レーベル管理</p></div>
    <div class="col-xs-6" style="padding-top: 15px">
      <% provide(:label_name, 'All labels') %>
      <%= search_form_for @search  do |f| %>
        <div class="form-group col-xs-3">
          <%= f.text_field :label_name_cont , class: "form-control ", :style=>"width:140%;" %>
        </div>
          <%= f.submit "検索", :class=>"btn btn-primary ", :style=>"margin:0 0 0 40px;height:36px;width:96px;"%>
      <% end %>
    </div>
      <div class="col-xs-3"><%= link_to "新規登録", new_label_path, class:"btn btn-primary ", :style=>"margin: 16px 0 0 55px;height:36px;width:96px;"%></div>
  </div>
    <div class="border"></div>
    <div class = "row">
      <div class="col-xs-1"></div>
      <div class="col-xs-10">
        <div class = "center-block">
          <table class = "table">
            <thead>
              <tr>
                <th></th>
                <th></th>
                <th>レーベル名</th>
                <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @result.each do |label| %>
                <tr>
                  <td></td>
                  <td></td>
                  <td><span><%= label.label_name %></span></td>
                  <td></td>
                  <td></td>
                  <td><%=link_to "編集", edit_label_path(label.id),class:"btn btn-primary ", :style=>"margin: 8px 0 0 0;height:36px;width:96px;"%></td>
                </tr>
              <% end %>
            </tbody>
          </table>
      </div>
          <div class = "paginate"><%= paginate @labels %></div>
        </div>
          <div class="col-xs-1"></div>
    </div>
</div>
