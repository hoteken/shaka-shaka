<div class="result-content">
	<h2><%= link_to results[:title], product_path(results[:product_id]), class: "result-title" %></h2>
	<%= link_to product_path(results[:product_id]) do %>
		<%= attachment_image_tag selected_item, :image, :fill, 400, 400, format: 'jpeg', class: "jacket-image", fallback:"img/no_image.png", :size => '400x400'  %>
	<% end %>
	<h3><%= link_to "item detail", product_path(results[:product_id]), class: "result-title" %></h3>
</div>