			</div>
			<div class="col-xs-3 col-xs-offset-2">
				<div class="request_ajax_shaka">
					<%= link_to ajax_shakashaka_path(:genre_id => 1 ),  method: :post , :remote => true  do %>
						<%= image_tag 'img/no_image.png', size: "200x200" %>
						<h3 class="rock">R O C K</h3>
					<% end %>
				</div>
			</div>
			<div class="col-xs-3">
				<div class="request_ajax_shaka">
					<%= link_to ajax_shakashaka_path(:genre_id => 2 ),  method: :post , :remote => true  do %>
						<%= image_tag 'img/no_image.png', size: "200x200" %>
						<h3 class="pop">P O P</h3>
					<% end %>

					<%
=begin%>
 <%= link_to "POP",  {:action => "shakashaka", :paramss => 2 }, {:remote => true, :class => "shakashaka btn btn-info", method: :post } %> 
<%
=end%>
				</div>
			</div>
			<div class="col-xs-3">
				<div class="request_ajax_shaka">
					<%= link_to ajax_shakashaka_path(:genre_id => 3 ),  method: :post , :remote => true  do %>
						<%= image_tag 'img/no_image.png', size: "200x200" %>
						<h3 class="punk">P U N K</h3>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</section>

<div id="overlay">
	<div id="result">
		<h2>discover new music</h2>
			<div id="shaka-content"></div>
		<button id="close">X</button>
	</div>
</div>

<script>

$(function(){
	// $(document).on('click', '#rock,#pop,#punk, .shakashaka', function(){
	// 	$('#overlay,#result').fadeIn();
	// });
	$('#close,#overlay').on('click', function(){
		$('#overlay,#result').fadeOut();
		$('#result').on('click', function(e){
			e.stopPropagation();
		});
	});

  $('.request_ajax_shaka').on('ajax:complete', function(event) {
    var response;
    response = event.detail[0].response;
    $('#shaka-content').html(response);
    $('#overlay,#result').fadeIn();
  });


});
</script>